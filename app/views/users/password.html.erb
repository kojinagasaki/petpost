<h2 class="text-center">パスワード変更</h2>
  <%= form_with(model: @user, local: true) do |f| %>
  　<div class="mt-2">
      <div class="form-group row">
        <%= f.label :password, "パスワード", class: 'col-md-2' %>
        <%= f.text_field :password, class: 'form-control col-md-10' %>
      </div>  
    </div>
    <div>
    <div class="form-group row">
      <%= f.label :password_confirmation, "確認", class: 'col-md-2' %>
      <%= f.text_field :password_confirmation, class: 'form-control col-md-10' %>
    </div>
    </div>
    <div class="text-center">
      <%= f.submit '変更する', class: 'btn btn-primary' %>
  <% end %>
  <%= link_to '戻る', :back, class: 'btn btn-primary' %>
  </div>