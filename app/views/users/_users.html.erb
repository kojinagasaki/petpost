<% if users.any? %>
  <div class="row">
    <% users.each do |user| %>
      <div class="text-center col-md-3 mt-2">
        <%= image_tag user.icon.to_s, class: "rounded-circle", :width => '100', :height => '100' %>
        <div class="mt-1">
          <%= link_to user.name, user_path(user) %>さん
        </div>
      </div>
    <% end %>
  </div>
  <%= paginate users %>
<% end %>
