<h2 class="text-center">プロフィール編集</h2>

  <%= form_with(model: @user, local: true) do |f| %>
  <%= render 'layouts/error_messages', model: f.object %>
  　<div class="mt-2">
      <div class="form-group row">
        <%= f.label :name, "ハンドルネーム", class: 'col-md-2' %>
        <%= f.text_field :name, class: 'form-control col-md-10' %>
      </div>  
    </div>
    <div>
    <div class="form-group row">
      <%= f.label :email, "Email", class: 'col-md-2' %>
      <%= f.text_field :email, class: 'form-control col-md-10' %>
    </div>
    </div>
    <div>
    <div class="form-group row">
      <%= f.label :password, "パスワード", class: 'col-md-2' %>
      <%= f.text_field :password, class: 'form-control col-md-10' %>
    </div>
    <div>
    <div class="form-group row">
      <%= f.label :back_img, "背景写真", class: "col-md-2" %>
      <div class="text-center col-md-10">
        <%= f.file_field :back_img %>
      </div>
    </div>
    <div>
    <div class="form-group row">
      <%= f.label :icon, "アイコン", class: "col-md-2" %>
      <div class="text-center col-md-10">
        <%= f.file_field :icon %>
      </div>
    </div>
    
    <div class="form-group row">
      <%= f.label :content, "紹介文", class: 'col-md-2' %>
      <%= f.text_area :content, class: 'form-control col-md-10' %>
    </div>
    <div class="text-center">
      <%= f.submit '変更する', class: 'btn btn-primary' %>
  <% end %>
  <%= link_to '戻る', :back, class: 'btn btn-primary' %>
  </div>